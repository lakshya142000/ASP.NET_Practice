@using WebApplication2.Models
@model  Employee


<h3>Edit Employee</h3>

 
<form  action="/Employee/Edit" method="post">
    <label>Employee No  : </label>
    <input name="EmpNo" type="text" readonly value="@Model.EmpNo" />
    <br/><br/>

    <label>Employee Name  : </label>
    <input name="Ename" type="text" readonly value="@Model.Ename" />
    <br/><br/>


     <label>Job  : </label>
    <input name="Job" type="text" readonly value="@Model.Job"/>
    <br/><br/>

    <label>Salary  : </label>
    <input name="Salary" type="text" readonly value="@Model.Salary"/>
    <br/><br/>

    <label>Department No  : </label>
    <input name="DeptNo" type="text" readonly value="@Model.DeptNo"/>
    <br/><br/>

    <input type="submit" value="Edit" />
</form>


@{
    if(ViewBag.RequestType == "POST")
    {
        <h1>@ViewBag.ErrorMessage</h1>
    }
}


